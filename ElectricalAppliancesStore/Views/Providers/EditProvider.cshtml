@model ElectricalAppliancesStore.Models.Provider

@{
    Layout = "~/Views/Shared/Management.cshtml";
    ViewBag.Title = "EditProvider";
}

<h2>Edit Supplier</h2>

@using (Html.BeginForm("Edit", "Providers", FormMethod.Post))
{
    @Html.HiddenFor(model => model.ID)
    @Html.LabelFor(model => model.CompanyName, new { @class = "th-manger-page" })
    @Html.TextBoxFor(model => model.CompanyName)<br />
    @Html.LabelFor(model => model.PhoneNumber, new { @class = "th-manger-page" })
    @Html.TextBoxFor(model => model.PhoneNumber)<br />
    @Html.LabelFor(model => model.ContactPerson, new { @class = "th-manger-page" })
    @Html.TextBoxFor(model => model.ContactPerson)<br />
    @Html.LabelFor(model => model.Email, new { @class = "th-manger-page" })
    @Html.TextBoxFor(model => model.Email)<br />

    <input type="submit" value="submit" class="btn-success" />
}