<table id="records_table" border='1'>
    <tr>
        <th>Company Name</th>
        <th>Product Name</th>
    </tr>
</table>

<script>
$(document).ready(function() {
    $.ajax({
             url: "/Manager/JoinProductsByProvider",
             success: function (data) {

                 $.each(data, function (i, item) {
                     $('<tr>').append(
                     $('<td>').text(item.CompanyName),
                     $('<td>').text(item.ProductName)).appendTo('#records_table');
                     });
            }
   });
});
</script>