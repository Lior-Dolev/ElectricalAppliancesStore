@model IEnumerable<ElectricalAppliancesStore.Models.Provider>

@{
    Layout = "~/Views/Shared/Management.cshtml";
    ViewBag.Title = "AddProvider";
}

<h2>Add Provider</h2>

@Html.ActionLink("New Provider", "AddProvider")

@if (Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayName("Actions")
            </th>
        </tr>
        @foreach (ElectricalAppliancesStore.Models.Provider p in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(item => p.CompanyName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditProvider", new { providerID = p.ID })
                    @Html.ActionLink("Delete", "Delete", new { providerID = p.ID })
                </td>
            </tr>
        }
    </table>
}

<table id="records_table" border='1'>
    <tr>
        <th>Company Name</th>
        <th>Product Name</th>
    </tr>
</table>

<script>
$(document).ready(function() {
    $.ajax({
             url: "/Manager/JoinProductsByProvider",
             success: function (data) {

                 $.each(data, function (i, item) {
                     $('<tr>').append(
                     $('<td>').text(item.CompanyName),
                     $('<td>').text(item.ProductName)).appendTo('#records_table');
                     });
            }
   });
});
</script>