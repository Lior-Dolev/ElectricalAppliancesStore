
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Master.css" rel="stylesheet" />
    <link href="~/Content/ControlsStyle/product.css" rel="stylesheet" />
    <link href="~/Content/ControlsStyle/search.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <meta name="viewport" content="width=device-width" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js" type="text/javascript"></script>
    <title>_Layout</title>
</head>
<body>
    <header></header>
    <div class="navbar_r navbar-default">
        <div class="container">
            <nav class="navbar-header">
                @Html.ActionLink("Home", "Index", "Manager", null, new { @class = "navbar-brand navbar-button_r" })
                @Html.ActionLink("Branches", "Branchs", "Branch", new { isMgr = true}, new { @class = "navbar-brand navbar-button_r" })
                @Html.ActionLink("Suppliers", "Index", "Providers", null, new { @class = "navbar-brand navbar-button_r" })
                @Html.ActionLink("Customers", "Index", "Users", null, new { @class = "navbar-brand navbar-button_r" })
                @Html.ActionLink("Inventory", "Inventory", "Products", null, new { @class = "navbar-brand navbar-button_r" })
                @Html.ActionLink("Log-Out", "Index", "Login", null, new { @class = "navbar-brand navbar-button_r" })
            </nav>
        </div>
    </div>
    <br />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <br />
            <p>&copy; @DateTime.Now.Year - FoodAndStuffStore</p>
        </footer>
    </div>
</body>
</html>
