@model List<ElectricalAppliancesStore.Models.Product>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<div class="jumbotron text-center">
    <h1> Wellcome to our store!</h1>
    <br />
    <p class="lead">
        We are selling everything you need, from food, to stuff!! E-V-E-R-Y-T-H-I-N-G! buy here more, and remember:
        <br /><br />

        <h3>
            <b>The more you buy, The happier you are</b>
        </h3>
    </p>
</div>
<div class="container">
    
    @if (Model.Count > 0)
    {
        foreach (ElectricalAppliancesStore.Models.Product currProduct in Model)
        {
            <p>@Html.DisplayFor(modelItem => currProduct.Title)</p>
        }
    }
</div>